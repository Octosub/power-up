<div class="background-banner">
  <h1 class="banger-font center text-center white-text">All Available Powers</h1>
  <div class="searchbar-middle">
    <form method="get" action="<%= powers_path %>">
      <input type="text" class= "banger-font wide-bar" name="powersearch" placeholder="Search powers...">
      <button type="submit" class="banger-font">Search</button>
      <button type="submit" name="q" value="" class="banger-font">Show All Powers</button>
    </form>
  </div>
  <div class="card-container m-4">
    <% @powers.each do |power| %>
      <%= link_to power_path(power) do %>
        <div class="card-power">
          <%= cl_image_tag power.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-power-infos">
            <div>
              <h2><%= power.name %></h2>
              <p><%= power.description %></p>
            </div>
            <h2 class="card-power-pricing"><%= power.price %>â‚¬</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
